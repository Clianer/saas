<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--1. 服务端项目名称。 qos.enalble 关闭，主要是为了解决启动多个dubbo服务端口占用问题。-->
    <dubbo:application name="export_stat_service">
        <dubbo:parameter key="qos.enable" value="false"/>
    </dubbo:application>

    <!--2. 配置注册中心地址-->
    <dubbo:registry address="zookeeper://192.168.37.99:2181"/>

    <!--3. 配置dubbo协议以及客户端访问服务的端口-->
    <dubbo:protocol name="dubbo" port="20885"/>

    <!--3. 开启dubbo的注解扫描-->
    <dubbo:annotation package="cn.itcast.service.stat.impl"/>
</beans>